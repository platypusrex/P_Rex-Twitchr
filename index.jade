doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE-edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title P_Rex Twitchr
        link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", rel="stylesheet", type="text/css")
        link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", rel="stylesheet", type="text/css")
        link(href='https://fonts.googleapis.com/css?family=Cabin+Sketch', rel='stylesheet', type='text/css')
        link(href="https://fonts.googleapis.com/css?family=Oswald", rel="stylesheet", type="text/css")
        link(href="https://fonts.googleapis.com/css?family=Roboto", rel="stylesheet", type="text/css")
        link(href="css/style.css", rel="stylesheet")
    body(ng-app='TwitchApp')
        nav.navbar.navbar-custom.navbar-static-top
            div.container
                div.navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse' data-target='.navbar-collapse')
                        span.sr-only Toggle Navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#/featured') P_Rex Twitchr
                        span
                            i.fa.fa-twitch
                div.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='#/featured') Featured Streams
                        li
                            a(href='#/codecamp') FreeCodeCamp
                        li
                            a(href='#/search') Search Streams
        div(ng-view)
        script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js", type='text/javascript')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.1/angular-route.js", type='text/javascript')
        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js', type='text/javascript')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js', type='text/javascript')
        script(src='js/twitchr.js', type='text/javascript')
        script(src='js/twitchrCtrl.js', type='text/javascript')
        script(src='js/twitchrService.js', type='text/javascript')
        script(src='js/campCtrl.js', type='text/javascript')
        script(src='js/searchCtrl.js' type='text/javascript')

