doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE-edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title P_Rex Twitchr
        link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", rel="stylesheet", type="text/css")
        link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", rel="stylesheet", type="text/css")
        link(href="https://fonts.googleapis.com/css?family=Oswald", rel="stylesheet", type="text/css")
        link(href="https://fonts.googleapis.com/css?family=Roboto", rel="stylesheet", type="text/css")
        link(href="css/style.css", rel="stylesheet")
    body(ng-app='TwitchApp')
        div.panel.panel-default(ng-controller='twitchController')
            div.panel-heading
                ul.nav.nav-pills
                    li.active(data-toggle='tab')
                        a(href='tab1') All
                    li(data-toggle='tab')
                        a(href='tab2') Online
                    li(data-toggle='tab')
                        a(href='tab3') Offline
            div.panel-body
                form.form-horizontal(role='form', name='searchStream', ng-submit='search(streamName)')
                    div.input-group
                        input.form-control(type='search', placeholder='Search Streams', ng-model='streamName')
                        span.input-group-btn
                            button.btn.btn-default(type='submit')
                                i.glyphicon.glyphicon-search
            ul.list-group
                li.list-group-item(ng-repeat='stream in streams | limitTo:10')
                    div.stream(data-toggle='collapse', ng-attr-data-target='{{"#streamInfo-" + $index}}')
                        img.logo.img-circle(ng-src='{{stream.stream.channel.logo}}')
                        span.lead
                            a(ng-href='{{stream.stream.channel.url}}', target='_blank') {{stream.stream.channel.display_name}}
                        i(ng-class='getClass(stream.stream)', title='Online!').pull-right
                    div.collapse(ng-attr-id='{{"streamInfo-" + $index}}')
                        hr
                        div.row
                            div.col-xs-12.text-center
                                h4.text-center.game-name {{stream.stream.channel.game}}
                                p {{stream.title}}
                                img.stream-image(ng-src='{{stream.stream.preview.medium}}')
                                div.row
                                    div.col-xs-6.text-right
                                        i.fa.fa-users
                                            span {{stream.stream.channel.followers | number}}
                                    div.col-xs-6.text-left
                                        i.fa.fa-heart-o
                                            span {{stream.stream.channel.views | number}}
                                div.row
                                    div.col-xs-12
                                        i.fa.fa-eye
                                            span {{stream.stream.viewers |  number}}
        script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js", type='text/javascript')
        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js', type='text/javascript')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js', type='text/javascript')
        script(src='js/twitchr.js', type='text/javascript')
        script(src='js/twitchrCtrl.js', type='text/javascript')
        script(src='js/twitchrService.js', type='text/javascript')

